[Unit]
Description=Streamlit Shogiwars Viewer
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/my_shogiwars
Environment="PATH=/home/ec2-user/my_shogiwars/venv/bin"
ExecStart=/home/ec2-user/my_shogiwars/start_streamlit.sh
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
